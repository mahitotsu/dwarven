<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Analysis Report</title>
    <style>
      body { font-family: Arial, sans-serif; margin: 24px; }
      .summary { margin-bottom: 24px; }
      img { max-width: 100%; height: auto; }
      table { border-collapse: collapse; }
      td, th { border: 1px solid #ddd; padding: 8px; }
    </style>
  </head>
  <body>
    <h1>Analysis Report</h1>
    <p>Generated at: {{ meta.generated_at }} | Source: {{ meta.source_file }}</p>

    <section class="summary">
      <h2>Summary</h2>
      <table>
        <tr><th>count</th><td>{{ summary.count }}</td></tr>
        <tr><th>mean</th><td>{{ summary.mean }}</td></tr>
        <tr><th>median</th><td>{{ summary.median }}</td></tr>
        <tr><th>min</th><td>{{ summary.min }}</td></tr>
        <tr><th>max</th><td>{{ summary.max }}</td></tr>
        <tr><th>start_date</th><td>{{ summary.start_date }}</td></tr>
        <tr><th>end_date</th><td>{{ summary.end_date }}</td></tr>
      </table>
    </section>

    <section class="plots">
      <h2>Time Series</h2>
      <img src="{{ plots.timeseries }}" alt="Time Series">
      <h2>Histogram</h2>
      <img src="{{ plots.histogram }}" alt="Histogram">
    </section>
  </body>
</html>
